angular
  .module('muppetshowApp', [
    'ngAnimate',
    'ngCookies',
    'ngResource',
    'ngRoute',
    'ngSanitize',
    'ngTouch',
    'angular-underscore'
  ])
  .config ($routeProvider) ->
    $routeProvider
      .when '/',
        templateUrl: 'views/main.html'
        controller: 'MainCtrl'
      .when '/about',
        templateUrl: 'views/about.html'
        controller: 'AboutCtrl'
      .when '/projects',
        templateUrl: 'scripts/projects/projects.html'
        controller: 'ProjectsCtrl'
      .otherwise
        redirectTo: '/'

